<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetPlanner.UI.Pages.CashFlowForm"
             xmlns:vm="clr-namespace:BudgetPlanner.UI.ViewModels.CashFlowForm"
             x:DataType="vm:CashFlowFormViewModel">
    <VerticalStackLayout
        VerticalOptions="Center">
        <Entry
            Text="{Binding Name, Mode=TwoWay}"
            WidthRequest="250.0"
            Margin="10.0"
            Placeholder="Nazwa przepływu"/>
        <Label
            Text="{Binding Date}"
        />
        <Entry
            Text="{Binding Amount, Mode=TwoWay}"
            Keyboard="Numeric"
            WidthRequest="250.0"
            Margin="10.0"
            Placeholder="Wprowadź kwotę"/>
        <Button
            Text="Dodaj"
            Command="{Binding AddEntityCommand}"
            WidthRequest="250.0"
            Margin="50.0"/>

    </VerticalStackLayout>
</ContentPage>